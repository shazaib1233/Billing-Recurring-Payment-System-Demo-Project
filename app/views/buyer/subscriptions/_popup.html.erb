<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#popup">
  Subscribe
</button>

<div class="modal fade" id="popup" tabindex="-1" aria-labelledby="popupLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="popupLabel">Confirmation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h3><%= plan.name %></h3>
        <ul>
          <% plan.features.each do |feature| %>
            <li><%= feature.name %></li>
          <% end %>
        </ul>
        <h4> <%= "Price per month: $#{plan.monthly_fee} only" %></h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= link_to 'Confirm Subscription', buyer_subscriptions_path(subscription: { name: plan.name, plan_id: plan.id, user_id: current_user.id }), method: :create, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
