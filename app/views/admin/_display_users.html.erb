<h1>Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Type</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Invite Users', new_user_invitation_path, class: 'btn btn-primary' %>
