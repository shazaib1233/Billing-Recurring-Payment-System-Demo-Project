<div class='nested-fields'>
  <div class="field">
    <%= f.label :feature_id, class: "form-label" %>
    <%= f.collection_select :feature_id, Feature.all, :id, :name, { include_blank: false }, multiple: false, class: "chosen form-control" %>
    <div class="field">
      <%= f.label :allocated_units, class: "form-label"  %>
      <%= f.text_field :allocated_units, class: "form-control" %>
    </div>
    <%= link_to_remove_association "Remove feature", f, class: "btn btn-danger my-3" %>
  </div>
</div>
