<h1> All Features </h1>

<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Code</th>
      <th>Unit Price</th>
      <th>Max Unit Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.id %></td>
        <td><%= feature.name %></td>
        <td><%= feature.code %></td>
        <td><%= feature.unit_price %></td>
        <td><%= feature.max_unit_limit %></td>
        <td><%= link_to 'Edit', edit_admin_feature_path(feature) %></td>
        <td><%= link_to 'Destroy', admin_feature_path(feature), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New feature', new_admin_feature_path, class: 'btn btn-primary' %>
