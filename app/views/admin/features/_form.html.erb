<%= form_for [:admin, @feature] do |form| %>
  <%= render 'shared/errors', object: @feature %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.number_field :unit_price, step: :any %>
  </div>

  <div class="field">
    <%= form.label :max_unit_limit %>
    <%= form.number_field :max_unit_limit %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
